<AssignMessage name='##'>
  <DisplayName>##</DisplayName>
  <IgnoreUnresolvedVariables>false</IgnoreUnresolvedVariables>
  <AssignVariable>
    <Name>timeFormatString1</Name>
    <Value>yyyyMMdd HH:mm:ss.SSS</Value> <!-- EEEE -->
  </AssignVariable>
  <AssignVariable>
    <Name>assigned</Name>
    <Template>{timeFormatUTCMs(timeFormatString1,system.timestamp)}</Template>
  </AssignVariable>
  <AssignVariable>
    <Name>assigned</Name>
    <Template>{xeger('[0-9]{12}')}</Template>
  </AssignVariable>
  <AssignVariable>
    <Name>minus_4</Name>
    <Value>-4</Value>
  </AssignVariable>
  <AssignVariable>
    <Name>zero</Name>
    <Value>0</Value>
  </AssignVariable>
  <AssignVariable>
    <Name>assigned</Name>
    <Template>{substring(alpha,zero,minus_4)}</Template>
  </AssignVariable>
  <AssignVariable>
    <Name>assigned</Name>
    <Template>{toLowerCase(assigned)}</Template>
  </AssignVariable>

  <AssignVariable>
    <Name>my_destination_variable</Name>
    <Template>{system.uuid}-{messageid}</Template>
  </AssignVariable>


  <AssignVariable>
    <Name>assigned</Name>
    <Template>{sha256Base64(abc_text)}</Template>
  </AssignVariable>

  <AssignVariable>
    <Name>assigned</Name>
    <Template>{replaceAll(messageid,'[0-9]','X')}</Template>
  </AssignVariable>

  <AssignVariable>
    <Name>assigned</Name>
    <Template>{randomLong(zero,plus_1000)}</Template>
  </AssignVariable>

</AssignMessage>
